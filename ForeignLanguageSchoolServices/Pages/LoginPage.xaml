<Page x:Class="ForeignLanguageSchoolServices.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ForeignLanguageSchoolServices.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid Background="{StaticResource ColorPrimary}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Login:"/>
                <TextBox Name="TxtLogin" Style="{StaticResource txtLogin}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Style="{StaticResource BlockCommon}" Text="Password:"/>
                <PasswordBox Style="{StaticResource PwdPAssword}" Name="PwdPassword"/>
            </StackPanel>
            <Button Style="{StaticResource BtnCommon}" HorizontalAlignment="Center" Name="BtnAvtorisation" Click="BtnAvtorisation_Click" Content="Войти"/>
        </StackPanel>
    </Grid>
</Page>
